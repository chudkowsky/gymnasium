{
  "training": {
    "total_steps": 500000,
    "steps_per_update": 4096,
    "log_interval": 1,
    "checkpoint_interval": 5,
    "seed": 42
  },
  "ppo": {
    "learning_rate": 3e-5,
    "n_epochs": 3,
    "batch_size": 128,
    "clip_ratio": 0.2,
    "entropy_coef": 0.01,
    "value_coef": 0.5,
    "kl_coef": 0.1,
    "gamma": 0.99,
    "gae_lambda": 0.95,
    "max_grad_norm": 0.5
  },
  "rollout": {
    "num_episodes_per_update": 32,
    "max_episode_length": 300,
    "accuracy_reward": {
      "enabled": true,
      "stockfish_depth": 5
    },
    "shaped_reward": {
      "enabled": false,
      "stockfish_depth": 3,
      "position_reward_coef": 0.01,
      "terminal_reward_coef": 1.0
    }
  },
  "opponent_pool": {
    "types": ["random", "stockfish"],
    "stockfish": {
      "enabled": true,
      "depth": 4
    }
  },
  "checkpoints": {
    "pretrained_path": "data/checkpoints/pretrained.pth",
    "trained_output_dir": "data/checkpoints"
  }
}
