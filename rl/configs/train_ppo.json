{
  "comment": "PPO training configuration for chess RL",
  "training": {
    "total_steps": 500000,
    "steps_per_update": 4096,
    "log_interval": 50,
    "checkpoint_interval": 500,
    "device": "cuda",
    "seed": 42
  },
  "ppo": {
    "learning_rate": 1e-3,
    "n_epochs": 8,
    "batch_size": 256,
    "clip_ratio": 0.2,
    "entropy_coef": 0.02,
    "value_coef": 0.5,
    "gamma": 0.99,
    "gae_lambda": 0.95,
    "max_grad_norm": 0.5
  },
  "rollout": {
    "num_episodes_per_update": 64,
    "num_envs": 1,
    "max_episode_length": 200
  },
  "opponent_pool": {
    "types": ["random"],
    "sampling": "uniform",
    "comment": "Types: 'random', 'stockfish', 'snapshot. Add 'stockfish' for UCI engine opponents.",
    "stockfish": {
      "enabled": false,
      "depth": 10,
      "movetime_ms": null,
      "fraction": 0.25,
      "comment": "Set enabled=true to include Stockfish. movetime_ms overrides depth if set."
    }
  },
  "checkpoints": {
    "pretrained_path": "data/checkpoints/pretrained.pth",
    "trained_output_dir": "data/checkpoints",
    "save_format": "trained_ppo_step_{step}.pth"
  }
}
